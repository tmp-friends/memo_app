<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <h3>タイトル</h3>
        <input name="title" value="<%= @post.title %>">
        <h3>ファクト</h3>
        <textarea name="fact"><%= @post.fact %></textarea>
        <h3>抽象化</h3>
        <textarea name="abstraction"><%= @post.abstraction %></textarea>
        <h3>転用</h3>
        <textarea name="diversion"><%= @post.diversion %></textarea>
        <% if @post.post_info != 1 %>
          <i class="fa fa-key key"></i>
        <% end %>
        <%= check_box_tag :post_info %>
        <%= label_tag :post_info, "公開する" %>
      <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>